- winner = @judge.winner

#judge-result
  %h3
    あなたが選んだのは
  = render :partial => "photos/basic", :as => :photo, :object => winner, :locals => { :show_name => true }
  %p
    %strong
      = "第%d位" % winner.rank
    %span
      = "%d Points" % winner.rate

  %p.nav-to-ranking
    = link_to "ランキングを見る", photos_path

= render :partial => "judges/voters", :locals => { :first => @first, :second => @second }
